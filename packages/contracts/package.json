{
  "name": "@boilerplate/contracts",
  "description": "Smart contracts",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=10",
    "yarn": "^1.17.3"
  },
  "scripts": {
    "lint": "yarn lint:prettier --check && yarn lint:eslint",
    "lint:fix": "yarn lint:prettier --write && yarn lint:eslint --fix",
    "lint:eslint": "eslint './test/**/*.ts'",
    "lint:prettier": "prettier './{test,contracts}/**/*.{ts,sol}'",
    "clean": "rimraf ./build/",
    "prebuild": "yarn clean",
    "build": "yarn build:contracts && yarn build:typechain",
    "build:contracts": "waffle .waffle.json",
    "build:typechain": "typechain --target ethers-v5 --outDir build/types 'build/*.json'",
    "test": "mocha",
    "start": "ts-node local"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^4.0.0",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "chai": "^4.2.0",
    "eslint": "^7.11.0",
    "ethereum-waffle": "^3.2.0",
    "ethers": "^5.0.19",
    "ganache-core": "^2.13.1",
    "mocha": "^8.2.1",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.59",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typechain": "^4.0.0",
    "typescript": "^4.0.5"
  }
}
